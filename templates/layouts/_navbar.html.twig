<header class="bg-white">
	<div class="px-4 mx-auto max-w-screen-xl sm:px-6 lg:px-8">
		<div class="flex items-center justify-between h-16">
			<div class="md:flex md:items-center md:gap-12">
				<a class="block text-teal-600 font-extrabold" href="/">
					Ismailo_Blog
				</a>
			</div>

			<div class="hidden md:block">
				<nav aria-labelledby="header-navigation">
					<h2 class="sr-only" id="header-navigation">Header navigation</h2>

					<ul class="flex items-center text-sm gap-6">
						<li>
							<a class="text-gray-600 font-bold transition hover:text-gray-500/75" href="/">
								Accueil
							</a>
						</li>

						<li>
							<a class="text-gray-600 font-bold transition hover:text-gray-500/75" href="{{path('app_article')}}">
								Articles
							</a>
						</li>


						<li>
							<a class="text-gray-600 font-bold transition hover:text-gray-500/75" href="/">
								FAQ
							</a>
						</li>
						<li>
							<a class="text-gray-600 font-bold transition hover:text-gray-500/75" href="{{path('article_create')}}">
								Créer un article
							</a>
						</li>
					</ul>
				</nav>
			</div>

			<div class="flex items-center gap-4">
				<div class="sm:gap-4 sm:flex">
					{% if app.user %}
						<a class="px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-md shadow" href="{{path('app_logout')}}">
							<i class="fa-solid fa-power-off"></i> Déconnexion
						</a>
						<a class="px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-md shadow" href="{{path('app_profile')}}">
							<i class="fa-solid fa-user"></i> Mon compte	
						</a>
					{% else %}
						<a class="px-5 py-2.5 text-sm font-medium text-white bg-teal-600 rounded-md shadow" href="{{path('app_login')}}">
							Connexion
						</a>

						<div class="hidden sm:flex">
							<a class="px-5 py-2.5 text-sm font-medium text-teal-600 bg-gray-100 rounded-md" href="{{path('app_register')}}">
								Inscription
							</a>
						{% endif %}


					</div>
				</div>

				<div class="block md:hidden">
					<button class="p-2 text-gray-600 bg-gray-100 rounded transition hover:text-gray-600/75">
						<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
							<path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16"/>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</div>
</header>
